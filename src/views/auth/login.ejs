<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Korex autos rentals</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="../img/favi.jpg" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="../lib/animate/animate.min.css" rel="stylesheet" />
    <link
      href="../lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../css/style.css" rel="stylesheet" />
    <link href="../css/register.css" rel="stylesheet" />
  </head>

  <body>
    <!-- Topbar &Navbar & Hero Start -->
    <%- include (`../partials/header`); -%>
    <!-- Topbar & Navbar & Hero End -->

    <div class="form_wrapper">
      <div class="form_container">
        <div class="title_container">
          <h2>Welcome User</h2>
        </div>
        <div class="row clearfix">
          <div class="">
            <form id="loginForm">
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                <input type="email" id="email" name="email" placeholder="Email"/>
              </div>
              <div
              id="emailError"
              class="error-message text-danger"
            ></div>
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Password"
                />
              </div>
              <div
              id="passwordError"
              class="error-message text-danger"
            ></div>
              <div class="col-12">
                <button
                  class="btn w-100 py-3"
                  type="submit"
                  style="background-color: #1f2e4e; color: #fff"
                >
                  Submit
                </button>
              </div>

              <span
                ><a
                  href="/auth/register"
                  style="text-decoration: none; color: black"
                  >New register!</a
                >
                <a
                href="/auth/forget-password"
                style="text-decoration: none; float:right ; color: black"
                >Forget password!</a
                </span
              >
              <div class="or-separator">
                <span>or</span>
              </div>

              <div class="google-signin">
                <a href="/your-google-auth-endpoint" class="google-button">
                  <img
                    src="https://assets.codepen.io/4861203/google.svg"
                    alt="Google Sign-In"
                  />
                  <span>Google Sign-In</span>
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <p class="credit">
      Developed by
      <a href="https://korextech.vercel.app" target="_blank">Korex_Tech</a>
    </p>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="../mail/login.js"></script>
  </body>
</html>
